/* pages/navtab/navtab.wxss */

.navigator-arrow {
    padding-right: 50rpx;
    position: relative;
    color: #888;
    text-align: right;
}

.navigator-arrow:after {
    content: " ";
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 28rpx;
}
.hr{
    content: "";
    width: 98%;
    height: 1px;
    margin-left: auto;
    margin-right: auto;
    border-bottom: 2px solid rgba(180, 180, 180, 0.3);
}
.navigator-text {
    flex: 1;
}

.navigator {
    padding: 20rpx 30rpx;
    position: relative;
    display: flex;
    align-items: center;
}

.navigator:first-child:before {
    display: none;
}
