/**index.wxss**/

.name-text {
    font-size: 40pt;
    color: white;
    text-shadow: 0px 0px 15px #555;
}

.welcome-text {
    padding-top: 40rpx;
    font-size: 18pt;
    color: white;
}

.hr {
    content: "";
    width: 98%;
    height: 1px;
    margin: 0px auto 0px auto;
    border-bottom: 2px solid rgba(255, 255, 255, 0.3);
}

.avatar {
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    box-shadow: 0px 0px 20px black;
    width: 160rpx;
    height: 160rpx;
    border: 1px solid white;
    border-radius: 50%;
}
.logout {
    padding-bottom: 20rpx;
    text-decoration: underline;
    font-size: 12pt;
}

.bgimage {
    position: absolute;
    background: url('https://connect.shs.cn/static/images/homepagebg.jpg') no-repeat center;
    left: 0;
    top: 0;
    height: 600rpx;
    overflow: hidden;
    width: 100%;
    z-index: -11;
}
.bgimage:after{
    content: "";
    width:100%;
    height:100%;
    position: absolute;
    left:0;
    top:0;
    background: inherit;
    filter: blur(2px);
    z-index: -10;
}

.header {
    text-align: center;
    margin: -2px 0px 0px 0px;
    width: 100%;
    z-index: 1;
    background: rgba(255, 255, 255, 0.3);
}

.info {
    box-shadow: 0px -20px 60px 2px #2c2c2c;
    margin-top: -2rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: row;
    background: #2c2c2c;
}

.CAS {
    width: 50%;
}

.title {
    color: #fff;
    size: 20pt;
}

.CAS .number {
    color: #ffac3a;
    font-size: 35pt;
    width: 100%;
    margin: auto auto auto -40rpx;
    padding-top: 15rpx;
    text-align: center;
}

.clubs {
    border-left: 2px solid rgba(180, 180, 180, 0.3);
    padding-left: 40rpx;
    margin-left: -40rpx;
    padding-bottom: 20rpx;
}

.clubs .number {
    color: #ffac3a;
    font-size: 20pt;
    text-align: right;
    margin-left: 40rpx;
}

.clubs .desc {
    position: absolute;
    right: 40rpx;
    float: right;
    font-size: 11pt;
    color: #ddd;
    line-break: 20rpx;
    margin-left: 20rpx;
}
.more {
    position: fixed;
    width: 100%;
    height: 100%;
    background: #fff;
}
.wrapper {
    display: flex;
    flex-direction: column;
}
.contents {
    height: 100%;
    width: 100%;
}
.notif {
    background: #2c2c2c;
    position: absolute;
    top: -100rpx;
    width: 100%;
    height: 0;
}