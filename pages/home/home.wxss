/**index.wxss**/

.name-text {
    font-size: 40pt;
    color: white;
    text-shadow: 0px 0px 15px #555;
}

.welcome-text {
    padding-top: 40rpx;
    font-size: 18pt;
    color: white;
}

.hr {
    content: "";
    width: 98%;
    height: 1px;
    margin: 0px auto 0px auto;
    border-bottom: 2px solid rgba(255, 255, 255, 0.3);
}

.avatar {
    margin-bottom: 40rpx;
    margin-top: 20rpx;
    box-shadow: 0px 0px 20px black;
    width: 160rpx;
    height: 160rpx;
    border: 1px solid white;
    border-radius: 50%;
}

.bgimage {
    position: absolute;
    display: block;
    bottom: 0;
    background: url('https://connect.shs.cn/static/images/homepagebg.jpg') no-repeat center;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
}
.bgimage:after{
    content: "";
    width:100%;
    height:100%;
    position: absolute;
    left:0;
    top:0;
    background: inherit;
    filter: blur(20px);
    z-index: -1;
}

.header {
    text-align: center;
    margin: -2px 0px 0px 0px;
    width: 100%;
    z-index: 1;
    background: rgba(255, 255, 255, 0.3);
}

.info {
    margin-top: -2rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: row;
    background-color: rgba(255, 255, 255, 0.7);
}

.CAS {
    width: 50%;
}

.title {
    color: #888;
    size: 20pt;
}

.CAS .number {
    color: #ffac3a;
    font-size: 30pt;
    width: 100%;
    transform: translate(-10%, 3%);
    text-align: center;
}

.clubs {
    border-left: 2px solid rgba(180, 180, 180, 0.3);
    padding-left: 40rpx;
    margin-left: -40rpx;
    padding-bottom: 20rpx;
}

.clubs .number {
    color: #ffac3a;
    font-size: 20pt;
    text-align: right;
    margin-left: 40rpx;
}

.clubs .desc {
    position: absolute;
    right: 40rpx;
    float: right;
    font-size: 11pt;
    color: #aaa;
    line-break: 20rpx;
    margin-left: 20rpx;
}