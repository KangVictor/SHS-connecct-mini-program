/* pages/clubs/clubinfo/clubinfo.wxss */
.banner-image{
    width: 100%;
    height: 100%;
}

.banner {
    width: auto;
    height: 400rpx;
}

.content {
    z-index: 2;
    width: 100%;
    position: absolute;
    background: white;
    box-shadow: 0rpx 0rpx 100rpx black;
}
.icon{
    height: 120rpx;
    width: 120rpx;
    z-index: 3;
    position: absolute;
    top: -60rpx;
    left: 10%;
    border-radius: 50%;
    background: #eee;
    box-shadow: 4rpx 4rpx 20rpx #555;
}
.clubname{
    margin-top: 86rpx;
    margin-left: 40rpx;
    font-size: 20pt;
    color: #353535;
}

.extraoptsbtn{
    position: absolute;
    top: 60rpx;
    right: 40rpx;
    height: 50px;
    width: 100px;
}

.hr{
    content: "";
    width: 90%;
    height: 1rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    margin-left: auto;
    margin-right: auto;
    border-bottom: 2px solid rgba(180, 180, 180, 0.3);
}
.description {
    margin: 0px 40rpx 16rpx 40rpx;
    width: auto;
    font-size: 14pt;
    color: #888;
}

.info {
    margin: 0px 40rpx 6rpx 40rpx;
    width: auto;
    font-size: 14pt;
}
.info .key {
    color: #111;
}
.info .value {
    color: #666;
}
.info .active {
    color: #2b2;
}
.info .inactive {
    color: #b22;
}

.navtab::before{
    margin: 0px 40rpx 0px 40rpx;
    width: auto;
}