/* pages/clubs/clubinfo/clubinfo.wxss */
.banner-image{
    width: 100%;
    height: 100%;
}

.banner {
    width: auto;
    height: 200px;
}

.content {
    z-index: 2;
    width: 100%;
    position: absolute;
    background: white;
    box-shadow: 0px 0px 100px black;
}
.icon{
    height: 60px;
    width: 60px;
    z-index: 3;
    position: absolute;
    top: -30px;
    left: 10%;
    border-radius: 50%;
    box-shadow: 2px 2px 10px #555;
}
.clubname{
    margin-top: 43px;
    margin-left: 20px;
    font-size: 20pt;
    color: #353535;
}
.extraoptsbtn{
    position: absolute;
    top: 30px;
    right: 20px;
    height: 50px;
    width: 100px;
}

.hr{
    content: "";
    width: 90%;
    height: 1px;
    margin-top: 10px;
    margin-bottom: 5px;
    margin-left: auto;
    margin-right: auto;
    border-bottom: 2px solid rgba(180, 180, 180, 0.3);
}
.description {
    margin: 0px 20px 8px 20px;
    width: auto;
    font-size: 14pt;
    color: #888;
}

.info {
    margin: 0px 20px 3px 20px;
    width: auto;
    font-size: 14pt;
}
.info .key {
    color: #111;
}
.info .value {
    color: #666;
}
.info .active {
    color: #2b2;
}
.info .inactive {
    color: #b22;
}