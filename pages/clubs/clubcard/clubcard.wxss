/* pages/clubs/clubcard/clubcard.wxss */
.backimage {
    width: 100%;
    height: 100%;
    border-radius: 8px;
    box-shadow: 0px 0px 5px #000 inset;
}

.cardbase {
    width: 100%;
    height: 100%;
    position: relative;
    border-radius: 8px;
    
    flex-direction: column;
    box-shadow: 3px 3px 2px #515151;
}

.clubname {
    position: absolute;
    z-index: 2;
    right: 10px;
    bottom: 10px;
    text-align: right;
}
.cardbase-hover {
    box-shadow: 3px 3px 2px #000 inset;
}